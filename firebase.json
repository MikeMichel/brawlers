{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    },
    {
      "source": ".output/server",
      "codebase": "server",
      "runtime": "nodejs16"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "domain": "brawlstars.emmlin.com",
    "public": ".output/public",
    "cleanUrls": true,
    "rewrites": [
      { 
        "source": "**", 
        "function": "server" 
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "ui": {
    "enabled": false
  }
}
